<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZapiskySSPS</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-screen">
    <div class="flex flex-col items-center w-screen h-1/2 justify-center">
      <h1 class="text-2xl font-bold">Zápisky SSPŠ</h1>
        <ul class="flex flex-col justify-center items-center border border-gray-950 border-solid p-5 mt-2">
          <% content.folders.forEach(folder => { %>
            <li class="hover:text-blue-500 duration-300 font-bold text-lg">
              <a href="/<%= currentFolder %><%= folder %>">
                <%= folder %>/
              </a>
            </li>
          <% }); %>
      
          <% content.files.forEach(file => { %>
            <li class="hover:text-blue-500 duration-300 font-bold text-lg">
            <a href="/<%= currentFolder %><%= file %>">
              <%= file %>
            </a>
          </li>
          <% }); %>
        </ul>
    </div>
</body>
</html>